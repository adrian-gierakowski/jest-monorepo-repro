{
  // see: https://www.npmjs.com/package/@tsconfig/node16-strictest
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/node18/tsconfig"
  ],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "composite": true,
    "rootDir": ".",
    "types": ["node"]
  }
}
